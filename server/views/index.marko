<script>
  var coll = document.getElementsByClassName("collapsible");
  var i;

  for (i = 0; i < coll.length; i++) {
    coll[i].addEventListener("click", function () {
      this.classList.toggle("active");
      var content = this.nextElementSibling;
      if (content.style.display === "block") {
        content.style.display = "none";
      } else {
        content.style.display = "block";
      }
    });
  }

  function mouseOver1() {
    document.getElementById("placeName").innerHTML = document.getElementById("placeLabel1").innerHTML;
    document.getElementById("placeInfo").innerHTML = "Rizal Park, also known as Luneta Park or simply Luneta, is a historical urban park in the Philippines. Located along Roxas Boulevard, Manila, adjacent to the old walled city of Intramuros, it is one of the largest urban parks in Asia"
    document.getElementById("card1").src = "images/a.png";
    document.getElementById("viewImg").src = "images/1.jpg"
  }
  function mouseOver2() {
    document.getElementById("placeName").innerHTML = document.getElementById("placeLabel2").innerHTML;
    document.getElementById("placeInfo").innerHTML = "The Empire State Building is a 102-story Art Deco skyscraper in Midtown Manhattan, New York City. Designed by Shreve, Lamb & Harmon and completed in 1931, the building has a roof height of 1,250 feet and stands a total of 1,454 feet tall, including its antenna.";
    document.getElementById("card2").src = "images/b.png";
    document.getElementById("viewImg").src = "images/2.jpg"
  }
  function mouseOver3() {
    document.getElementById("placeName").innerHTML = document.getElementById("placeLabel3").innerHTML;
    document.getElementById("placeInfo").innerHTML = "The Eiffel Tower is a wrought-iron lattice tower on the Champ de Mars in Paris, France. It is named after the engineer Gustave Eiffel, whose company designed and built the tower.";
    document.getElementById("card3").src = "images/c.png";
    document.getElementById("viewImg").src = "images/3.jpg"
  }
  function mouseOver4() {
    document.getElementById("placeName").innerHTML = document.getElementById("placeLabel4").innerHTML;
    document.getElementById("placeInfo").innerHTML = "Christ the Redeemer is an Art Deco statue of Jesus Christ in Rio de Janeiro, Brazil, created by French sculptor Paul Landowski and built by Brazilian engineer Heitor da Silva Costa, in collaboration with French engineer Albert Caquot. Romanian sculptor Gheorghe Leonida fashioned the face."
    document.getElementById("card4").src = "images/d.png";
    document.getElementById("viewImg").src = "images/4.jpg"
  }
  function mouseOver5() {
    document.getElementById("placeName").innerHTML = document.getElementById("placeLabel5").innerHTML;
    document.getElementById("placeInfo").innerHTML = "Stonehenge is a prehistoric monument in Wiltshire, England, two miles (3 km) west of Amesbury. It consists of a ring of standing stones, with each standing stone around 13 feet (4.0 m) high, seven feet (2.1 m) wide and weighing around 25 tons."
    document.getElementById("card5").src = "images/e.png";
    document.getElementById("viewImg").src = "images/5.jpg"
  }
  function mouseOver6() {
    document.getElementById("placeName").innerHTML = document.getElementById("placeLabel6").innerHTML;
    document.getElementById("placeInfo").innerHTML = "The Sydney Opera House is a multi-venue performing arts centre in Sydney, New South Wales, Australia. It is one of the 20th century's most famous and distinctive buildings."
    document.getElementById("card6").src = "images/f.png";
    document.getElementById("viewImg").src = "images/6.jpg"
  }
  function mouseOver7() {
    document.getElementById("placeName").innerHTML = document.getElementById("placeLabel7").innerHTML;
    document.getElementById("placeInfo").innerHTML = "The Great Pyramid of Giza is the oldest and largest of the three pyramids in the Giza pyramid complex bordering what is now El Giza, Egypt. It is the oldest of the Seven Wonders of the Ancient World, and the only one to remain largely intact.</span>";
    document.getElementById("card7").src = "images/g.png";
    document.getElementById("viewImg").src = "images/7.jpg"
  }
  function mouseOver8() {
    document.getElementById("placeName").innerHTML = document.getElementById("placeLabel8").innerHTML;
    document.getElementById("placeInfo").innerHTML = "The Grand Canyon is a steep-sided canyon carved by the Colorado River in Arizona, United States. The Grand Canyon is 277 miles (446 km) long, up to 18 miles (29 km) wide and attains a depth of over a mile (6,093 feet or 1,857 meters).";
    document.getElementById("card8").src = "images/b.png";
    document.getElementById("viewImg").src = "images/8.jpg"
  }
  function mouseOver9() {
    document.getElementById("placeName").innerHTML = document.getElementById("placeLabel9").innerHTML;
    document.getElementById("placeInfo").innerHTML = "Himeji Castle is also known as “White Egret Castle” (Hakuro-jo) or “White Heron Castle” (Shirasagi-jo) due to its pristine whiteness and resemblance to a flying bird. This medieval landmark is known for its structural integrity, having survived a fire, a war and an earthquake but also for its unparalleled beauty, marking it out as a top filming location";
    document.getElementById("card9").src = "images/i.png";
    document.getElementById("viewImg").src = "images/9.jpg"
  }

  function mouseOver10() {
    document.getElementById("placeName").innerHTML = "DEVELOPMENT";
    document.getElementById("placeInfo").innerHTML =  "IN PROGRESS";
    //document.getElementById("card9").src = "images/i.png";
    document.getElementById("viewImg").src = "images/gear.png"
  }

  function mouseOut() {
    document.getElementById("placeName").innerHTML = "Welcome!";
    document.getElementById("placeInfo").innerHTML = "";
    document.getElementById("viewImg").src = "images/map.svg";
    document.getElementById("card1").src = "images/1.jpg";
    document.getElementById("card2").src = "images/2.jpg";
    document.getElementById("card3").src = "images/3.jpg";
    document.getElementById("card4").src = "images/4.jpg";
    document.getElementById("card5").src = "images/5.jpg";
    document.getElementById("card6").src = "images/6.jpg";
    document.getElementById("card7").src = "images/7.jpg";
    document.getElementById("card8").src = "images/8.jpg";
    document.getElementById("card9").src = "images/9.jpg";
  }

</script>

</html>